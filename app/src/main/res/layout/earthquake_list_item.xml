<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/earthquake_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magnitude_left_margin"
        android:layout_marginStart="@dimen/magnitude_left_margin"
        tools:text="4.5" />

    <TextView
        android:id="@+id/earthquake_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/location_left_margin"
        android:layout_marginStart="@dimen/location_left_margin"
        tools:text="Los Angeles" />

    <TextView
        android:id="@+id/earthquake_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/date_right_margin"
        android:layout_marginEnd="@dimen/date_right_margin"
        tools:text="Jan 1, 2016" />
</RelativeLayout>